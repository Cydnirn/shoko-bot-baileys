{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Node16",
        "moduleResolution": "Node16",
        "checkJs": false,
        "baseUrl": "./",
        "rootDir": "src",
        "outDir": "dist",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules"],
    "include": ["./"],
    "ts-node": {
        "files": true
    }
}